{
  "input_dir": "./text_files",
  "collection_name": "text_ingestion_docs",
  "file_pattern": "**/*.txt",
  "processing": {
    "chunk_size": 1000,
    "chunk_overlap": 200,
    "batch_size": 100
  },
  "embeddings": {
    "model": "sentence-transformer",
    "model_name": "all-MiniLM-L6-v2"
  },
  "database": {
    "host": "localhost",
    "port": 5432,
    "database": "rag_db",
    "user": "rag_user",
    "password": "rag_password"
  },
  "options": {
    "overwrite": false,
    "verbose": false,
    "log_file": false
  }
}
